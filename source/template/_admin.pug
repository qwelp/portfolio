block variables

doctype html
html
	head
		meta(charset="utf-8")
		title #{title}
		meta(content="qwelp" name="author")
		meta(content="" name="description")
		meta(content="" name="keywords")
		meta(content="width=device-width, initial-scale=1" name="viewport")
		meta(content="ie=edge" http-equiv="x-ua-compatible")

		//- favicon block start
		//- favicon block end
		link(rel="shortcut icon" href="/images/favicon.png" type="image/png")
		link(rel='stylesheet' href='assets/css/foundation.css')
		link(rel='stylesheet' href='assets/css/app.css')
		script(src='assets/js/foundation.js' defer)
		script(src='assets/js/app.js' defer)


		<!--[if lt IE 9]>
		script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
		<![endif]-->

	body.admin__bg
		.admin__wrapper
			header.admin__header
				.admin__header-left Панель администрирования
				.admin__header-right
					a.admin__header-link(href="#") Вернуться на сайт
			nav.admin-menu
				ul.admin-menu__items
					each item, ndx in ['Обо мне', 'Блог', 'Мои работы']
						li.admin-menu__item(class=`${ ndx==0 ? 'active' : '' }`)
							a.admin-menu__link(href="#")=item
			main.admin__main
				block content

